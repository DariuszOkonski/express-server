<h2>Contact me</h2>

{{#if isSent}}
  <p style='color: green;'>The message has been sent</p>
{{/if}}

{{#if isError}}
  <p style='color: red;'>You can not leave fields empty!</p>
{{/if}}

<form action='/contact/send-message' method='POST'>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <br />
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <br />
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <br />
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <br />
  <button type='submit'>Send message</button>
</form>