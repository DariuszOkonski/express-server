<h2>Contact me</h2>

{{#if isSent}}
  <p class='isSent'>The message has been sent</p>
{{/if}}

{{#if isError}}
  <p class='isError'>You can not leave fields empty!</p>
{{/if}}

<form
  action='/contact/send-message'
  method='POST'
  enctype='multipart/form-data'
>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Project design:
    <input type='file' name='design' accept='.png, .jpg, .jpeg, .gif' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <button type='submit'>Send message</button>
</form>